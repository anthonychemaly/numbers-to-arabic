{
  "name": "numbers-to-arabic",
  "version": "1.0.0",
  "description": "n2words converts a numerical number into a written one, supports 2 languages and has zero dependencies.",
  "keywords": [
    "n2words",
    "convert",
    "number",
    "word",
    "text",
    "natural",
    "language",
    "english",
    "french",
    "spanish",
    "german",
    "portuguese",
    "italian",
    "turkish",
    "russian",
    "czech",
    "norwegian",
    "danish",
    "polish",
    "ukrainian",
    "lithuanian",
    "latvian",
    "arabic",
    "hebrew",
    "korean",
    "dutch",
    "serbian",
    "farsi",
    "persian",
    "chinese",
    "hungarian",
    "indonesian",
    "croatian",
    "vietnamese",
    "azerbaijani"
  ],
  "homepage": "https://github.com/anthonychemaly/numbers-to-arabic#readme",
  "bugs": {
    "url": "https://github.com/anthonychemaly/numbers-to-arabic/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anthonychemaly/numbers-to-arabic.git"
  },
  "license": "MIT",
  "author": "Anthony Chemaly",
  "contributors": [
    "Anthony Chemaly (https://github.com/anthonychemaly)"
  ],
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./lib/n2words.js",
    "./i18n/*.js": "./lib/i18n/*.js"
  },
  "jsdelivr": "dist/n2words.js",
  "unpkg": "dist/n2words.js",
  "files": [
    "lib/*",
    "dist/*"
  ],
  "scripts": {
    "bench": "node bench.js",
    "build": "webpack --progress",
    "build:types": "npx -p typescript tsc lib/n2words.js dist/n2words.js --target es6 --module nodenext --allowJs --declaration --emitDeclarationOnly",
    "docs": "jsdoc -c ./conf.json"
  },
  "c8": {
    "all": true,
    "include": [
      "lib/"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@eslint/js": "^9.6.0",
    "@stylistic/eslint-plugin-js": "^2.3.0",
    "babel-loader": "^9.1.3",
    "benchmark": "^2.1.4",
    "c8": "^10.1.2",
    "chalk": "^5.3.0",
    "chromedriver": "^126.0.4",
    "core-js": "^3.37.1",
    "jsdoc": "^4.0.3",
    "markdownlint-cli2": "^0.13.0",
    "microtime": "^3.1.1",
    "selenium-webdriver": "^4.22.0",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": "^18 || ^20 || >=22"
  }
}
